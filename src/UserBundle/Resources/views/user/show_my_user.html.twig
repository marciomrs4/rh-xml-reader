{% extends 'base.html.twig' %}

{% block title %}Recursos Humanos{% endblock %}

{% block page_title %} User {% endblock %}
{% block page_sub_title %} Mostrar {% endblock %}


    {% block content %}

        <div class="row">
                {% for message in app.session.flashBag.get('notice') %}
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="alert alert-{{ message.type }} alert-dismissible" role="alert">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                            <i class="fa fa-info"></i> {{ message.message }}. <i class="fa fa-smile-o"></i>
                        </div>
                    </div>
                {% endfor %}
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="box">
                    <div class="box-header with-border">

                            <a href="{{ path('admin_my_usuario_edit',{ 'id': user.id }) }}">
                                <button class="btn btn-primary btn-sm">
                                    <span class="fa fa-edit"></span>
                                    Editar
                                </button>
                            </a>

                    </div>

                    <div class="box-body">
                        <div class="table-responsive">
                            <table class="table table-bordered table-condensed table-hover table-striped table-datatable">

                                <tbody>
                                <tr>
                                    <th>Username</th>
                                    <td>{{ user.username }}</td>
                                </tr>
                                <tr>
                                    <th>Isactive</th>
                                    <td>{% if user.isActive %}Ativo{% else %}Inativo{% endif %}</td>
                                </tr>
                                <tr>
                                    <th>Email</th>
                                    <td>{{ user.email }}</td>
                                </tr>

                                </tbody>
                            </table>

                        </div>
                    </div>

                </div>
            </div>
        </div>

    {% endblock %}
