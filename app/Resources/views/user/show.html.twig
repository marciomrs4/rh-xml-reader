{% extends 'base.html.twig' %}

{% block title %}Recursos Humanos{% endblock %}

{% block page_title %} User {% endblock %}
{% block page_sub_title %} Mostrar {% endblock %}


    {% block content %}

        <div class="row">
            <div class="col-md-12">
                <div class="box">
                    <div class="box-header with-border">

                        {% if is_granted('ROLE_SUPER_ADMIN') %}
                        <a href="{{ path('admin_usuario_index') }}">
                            <button class="btn btn-primary btn-sm">
                                <span class="fa fa-backward"></span>
                                Voltar
                            </button>
                        </a>
                        {% endif %}

                    </div>

                    <div class="box-body">
                        <div class="table-responsive">
                            <table class="table table-bordered table-condensed table-hover table-striped table-datatable">

                                <tbody>
                                <tr>
                                    <th>Id</th>
                                    <td>{{ user.id }}</td>
                                </tr>
                                <tr>
                                    <th>Username</th>
                                    <td>{{ user.username }}</td>
                                </tr>
                                <tr>
                                    <th>Roles</th>
                                    <td>{% if user.roles %}{{ user.roles|join(', ') }}{% endif %}</td>
                                </tr>
                                <tr>
                                    <th>Isactive</th>
                                    <td>{% if user.isActive %}Ativo{% else %}Inativo{% endif %}</td>
                                </tr>
                                <tr>
                                    <th>Email</th>
                                    <td>{{ user.email }}</td>
                                </tr>

                                </tbody>
                            </table>

                        </div>
                    </div>

                </div>
            </div>
        </div>

    {% endblock %}
