{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{  parent() }}
    <link rel="stylesheet" href="{{ asset("bundles/rhxmlreader/css/dataTables.bootstrap.min.css") }}">
{% endblock %}

{% block title %}Recuros humanos{% endblock %}

{% block page_title %}user{% endblock %}

{% block page_sub_title %} Listar {% endblock %}

{% block content %}

    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header with-border">

                    <a href="{{ path('admin_usuario_new') }}">

                        <button class="btn btn-primary btn-sm">
                            <span class="fa fa-plus"></span>
                            Novo
                        </button>
                    </a>
                </div>

                <div class="box-body">

                    <div class="table-responsive">
                        <table class="table table-bordered table-condensed table-hover table-striped table-datatable">

                            <thead>
                            <tr>
                                <th>Ações</th>
                                <th>Username</th>
                                <th>Roles</th>
                                <th>Isactive</th>
                                <th>Email</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for user in users %}
                                <tr>
                                    <td>

                                        <a href="{{ path('admin_usuario_show', { 'id': user.id }) }}">
                                            <button class="btn btn-primary btn-xs">
                                                <span class="fa fa-show"></span>
                                                show
                                            </button>
                                        </a>

                                        <a href="{{ path('admin_usuario_edit', { 'id': user.id }) }}">
                                            <button class="btn btn-primary btn-xs">
                                                <span class="fa fa-edit"></span>
                                                edit
                                            </button>
                                        </a>
                                    </td>
                                    <td>{{ user.username }}</td>
                                    <td>{% if user.roles %}{{ user.roles|join(', ') }}{% endif %}</td>
                                    <td>{% if user.isActive %}Ativo{% else %}Inativo{% endif %}</td>
                                    <td>{{ user.email }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>

                    </div>
                </div>

            </div>

        </div>

    </div>


{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script src='{{ asset('bundles/rhxmlreader/js/jquery.dataTables.min.js') }}'></script>
    <script src='{{ asset('bundles/rhxmlreader/js/dataTables.bootstrap.min.js') }}'></script>

    <script>

        $(".table-datatable").DataTable({
            "oLanguage": {
                "oPaginate":{
                    "sPrevious": "Anterior ",
                    "sNext": " Proximo "
                },
                "sLengthMenu": "Mostrar _MENU_ resultado(s)",
                "sSearch": "Pesquisar: ",
                "sInfo": "Mostrando _START_ a _END_ de _TOTAL_ resultado(s)",
                "sInfoFiltered": "(Total: _MAX_ )",
                "sZeroRecords": "Resultado nao encontrado",
                "sInfoEmpty": "Sem resultados"
            }
        });

    </script>

{% endblock %}

