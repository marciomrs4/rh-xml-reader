{% extends 'base.html.twig' %}

{% block title %}Recursos Humanos{% endblock %}

{% block page_title %} User {% endblock %}
{% block page_sub_title %} Editar {% endblock %}


    {% block content %}

        <div class="row">
            {% for message in app.session.flashBag.get('notice') %}
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="alert alert-{{ message.type }} alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <i class="fa fa-info"></i> {{ message.message }}. <i class="fa fa-smile-o"></i>
                    </div>
                </div>
            {% endfor %}
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="box">
                    <div class="box-header with-border">

                        {% if is_granted('ROLE_SUPER_ADMIN') %}
                            <a href="{{ path('admin_usuario_index') }}">
                                <button class="btn btn-primary btn-sm">
                                    <span class="fa fa-backward"></span>
                                    Voltar
                                </button>
                            </a>
                        {% endif %}
                        <br><br>
                        <h3 class="box-title"><b>Usu√°rio: </b>{{ user.username }}</h3>

                    </div>

                    <div class="box-body">

                        {{ form_start(edit_form) }}
                        {{ form_widget(edit_form) }}
                        <button class="btn btn-primary btn-sm">
                            <span class="fa fa-edit"></span>
                            Salvar
                        </button>
                        {{ form_end(edit_form) }}

                    </div>

                </div>
            </div>
        </div>
    {% endblock %}
